#!/bin/sh

# This script gets the value and print it with an approprriate icon
# Be careful with the icons, since they are color emojis.

vol=$(pamixer --get-volume)

if [ $vol -gt 80 ]; then
	icon="ðŸ”Š"
elif [ $vol = 0 ]; then
	icon="ðŸ”‡"
elif [ $vol -lt 35 ]; then
	icon="ðŸ”ˆ"
else 
	icon="ðŸ”‰"
fi

([ $(pamixer --get-mute) = true ] && echo "ðŸ”‡ $vol%" && exit) || echo "$icon $vol%"
