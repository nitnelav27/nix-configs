#!/bin/sh

# Outputs the audio source

defsink=$(pacmd list-sinks | grep "* index" | awk {'print $3'})

sinkname=$(pactl list short sinks | grep "^$defsink" | awk {'print $2'})

if [[ $sinkname = *"hdmi"* ]]; then
	icon="ğŸ–¥ "
elif [[ $sinkname = *"analog"* ]]; then
	icon="ğŸ§"
else
	icon="ïŠ“ "
fi

echo "Sound: $icon"
